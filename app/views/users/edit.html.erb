<%= form_for (@user) do |f| %>

<%= f.label :first_name %> <br />
<%= f.text_field :name  ,:value => @user.name %><br />

<%= f.label :last_name %> <br />
<%= f.text_field :lname  ,:value => @user.lname %><br />

<%= f.label :email %> <br />
<%= f.email_field :email  ,:value => @user.email %><br />

<% if current_user.is_admin? %>
	<%= f.label :role %> <br />
	<%= f.select :role, options_for_select([:customer, :merchant, :admin], @user.role) %><br />
<% end %>
<br />
<%= f.submit "Save Changes", ({:confirm => "Are you sure?"}) %>
<% end %>
