<%= form_for (@users) do |f| %>

<%= f.label :first_name %> <br />
<%= f.text_field :name  ,:value => @users.name %><br />

<%= f.label :last_name %> <br />
<%= f.text_field :lname  ,:value => @users.lname %><br />

<%= f.label :email %> <br />
<%= f.email_field :email  ,:value => @users.email %><br />

<%= f.label :role %> <br />
<%= f.select :role, options_for_select([:customer, :merchant, :admin], @users.role) %><br />

<!-- We probably should not allow ID's to be changed as this will only break things.
<%= f.label :id %> <br />
<%= f.text_field :id  ,:value => @users.id %><br />
-->
<br />
<%= f.submit ({:confirm => "Are you sure?"}) %>
<% end %>
