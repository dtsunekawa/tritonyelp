<h1>Listing Stores</h1>

<table>
	<tr>
		<th>Name</th>
	</tr>

<% @stores.each do |store| %>
	<tr>
		<td><%= store.name %></td>
		<td><%= link_to 'Show', store %></td>
		<td><%= link_to 'Edit', edit_store_path(store) %></td>
		<td><%= link_to 'Destory', store, :method => :delete, :data => { :confirm => 'Are you sure you\'d like to delete this store?' } %></td>
	</tr>
<% end %>
</table>

<br />

<%= link_to 'New Store', new_store_path %>
