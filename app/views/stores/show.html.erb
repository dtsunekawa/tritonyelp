  <b><%= @store.name %></b>
	<br />

	<% if @store.image.exists? %>
	<center><%= image_tag @store.image.url(:banner), :class => "banner" %></center>
	<br />
	<% end %>

	<%= @store.description %>
	<br />
	<% if user_signed_in? and current_user.stores.include?(@store) %>
	<%= link_to 'Edit', edit_store_path(@store) %>
	<% end %>
	<%= link_to 'Review', new_store_review_path(@store) %>

 

	<% if !@store.reviews.empty? %>
	<br />
	<br />
	<b>Customer Feedback</b>
  	<% @store.reviews.each do |review| %>
		<br />
		<br />
  		
  		<!-- Edit link for admin -->
  		<% if current_user.is_admin? %> 
  			<%= link_to 'Admin Edit', edit_store_review_path(@store, review) %>
        <%= link_to 'Remove Review', review, :confirm => 'Remove this Review?', :method => :delete %>
  		<% end %> 

		<br />

		<b> <%= review.user.name %> </b>

  		<br />

  		<%= review.content %>

			<% up_count = review.uservotes.upcount(review.id) %>
			<% if up_count > 0 %>
				<span style="color: green">+<%= up_count %></span>
			<% else %>
				+<%= up_count %>
			<% end %>

      <% if user_signed_in? %>
			<br />
			<br />
      <%= button_to "This Review Was Helpful", { :controller => 'uservotes',
                          :action => 'upvote',
                          :pid => current_user.id,
                          :rid => review.id,
                          :sid => @store.id,
                          :method => 'create' } %>

      <% end %>
			<% if !review.tags.empty? %>
  			<br />
				<small><i>Tags: <% review.tags.each do |tag| %>
  				<%= tag.name %>
  			<% end %></i></small>
			<% end %>
 		<% end %>
	<% end %>
<br />
<br />
<%= link_to 'Back', root_path %>

