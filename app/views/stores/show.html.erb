  <b><%= @store.name %></b>
	<br />
	<%= @store.description %>
	<br />
	<br />
	<%= link_to 'Edit', edit_store_path(@store) %>
	<%= link_to 'Review', new_store_review_path(@store) %>



  <% @store.reviews.each do |review| %>
  	<h5> <%= review.user.name %> </h5>
  	<p> <%= review.content %><br>

      <% if user_signed_in? %>
      <%= button_to "+",{ :controller => 'uservotes',
                          :action => 'upvote',
                          :pid => current_user.id,
                          :rid => review.id,
                          :sid => @store.id,
                          :method => 'create' } %>

       <%= review.uservotes.upcount(review.id) %>
      <% end %>

  	<% review.tags.each do |tag| %>
  		<%= tag.name %> 
  	<% end %>
  	</p>
    
     

 <%end%>
