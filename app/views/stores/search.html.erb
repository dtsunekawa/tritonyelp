
	<h1>Showing results for <%= params[:key] %></h1>

	<% @stores.each.with_index do |store, index| %>
		<div class="search_result">
			
			
			<% if store.image.exists? %>
				<div class="search_result_thumb"><%= link_to (image_tag store.image.url(:search_thumb)), store %></div>
			<% end %>
			<div class="search_result_title"><b><%= link_to store.name, store %></b> <% if store.avg_rating != 0 %><i>(<%= store.avg_rating_str %> out of 5)</i><% end %></div>
			<br />
			<td><%= (store.description || "").truncate(240, :omission => " ...") %></td>
		</div>
		<div class="clear"></div>
		
		<% if index < @stores.length - 1 %>
		<div class="seperator"></div>
		<br />
		<% else %>
		<br />
		<% end %>

	<% end %>


