<%= form_for @store, :html => { :multipart => true } do |f| %>
	<% if @store.errors.any? %>
		<div id="error_explaination">
			<h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved: </h2>

			<ul>
				<% @store.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name %><br />
	<%= f.label :description %><br />
	<%= f.text_area :description %><br />
	<br />
	<%= f.label "Add an Image" %><br />
	<%= f.file_field :image %><br />
	<br />
</div>
<div class="actions">
	<%= f.submit %>
</div>
<% end %>
