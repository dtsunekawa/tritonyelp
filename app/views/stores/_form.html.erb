<%= form_for @store, :html => { :multipart => true } do |f| %>
	<% if @store.errors.any? %>
		<div id="error_explaination">
			<h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved: </h2>

			<ul>
				<% @store.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name %><br />
	<br />
	<%= f.label :description, 'Description (must be at least 140 chars):' %><br />
	<%= f.text_area :description %><br />
	<br />

	<p> (Optional Fields) </p>
	Twitter User Name:<br />
	<%= f.text_field :twitter_user_name %><br />
	Twitter API Widget ID:<br />
	<%= f.text_field :twitter_widget_id %><br />
	<br />

	<% if @store.image.exists? %>
		<%= check_box_tag :remove_image %>
		<%= f.label "Remove Image?" %>
		<br />
		<br />
		<%= image_tag @store.image.url(:thumb) %>
		<br />
		<br />
		<%= f.label "Add a new image" %><br />
		<%= f.file_field :image %><br />
	<% else %>
	<%= f.label "Add an Image" %><br />
	<%= f.file_field :image %><br />
	<% end %>
	<br />
	

</div>
<div class="actions">
	<%= f.submit %>
</div>
<% end %>
